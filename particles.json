{
  "autoPlay": true,
  "clear": true,
  "fpsLimit": 120,
  "interactivity": {
    "detectsOn": "window",
    "events": {
      "resize": {
        "enable": true
      }
    },
    "modes": {
      "trail": {
        "delay": 1
      },
      "attract": {
        "distance": 200
      },
      "bubble": {
        "distance": 200
      },
      "connect": {
        "distance": 80
      },
      "grab": {
        "distance": 100
      },
      "push": {
        "default": true
      },
      "remove": {
        "quantity": 2
      },
      "repulse": {
        "distance": 200
      },
      "slow": {
        "factor": 3
      }
    }
  },
  "particles": {
    "bounce": {
      "horizontal": {
        "value": 1
      },
      "vertical": {
        "value": 1
      }
    },
    "move": {
      "enable": true,
      "speed": 5,
      "trail": {
        "enable": true,
        "length": 3,
        "fill": {
          "color": {
            "value": "#000000"
          }
        }
      }
    },
    "number": {
      "value": 0
    },
    "opacity": {
      "value": {
        "min": 0.3,
        "max": 0.8
      }
    },
    "shadow": {
      "color": {
        "value": "#000"
      },
      "enable": false
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "value": {
        "min": 1,
        "max": 10
      }
    },
    "stroke": {
      "width": 0
    }
  },
  "pauseOnBlur": true,
  "pauseOnOutsideViewport": true,
  "zLayers": 100,
  "emitters": {
    "autoPlay": true,
    "rate": {
      "quantity": 10,
      "delay": 0.25
    },
    "shape": {
      "type": "square"
    },
    "position": {
      "x": 50,
      "y": 50
    },
    "spawnColor": {
      "value": "#ff0000",
      "animation": {
        "h": {
          "count": 0,
          "enable": true,
          "speed": 5,
          "offset": 0
        },
        "l": {
          "count": 0,
          "enable": true,
          "speed": 0,
          "offset": {
            "min": 20,
            "max": 80
          }
        }
      }
    }
  },
  "motion": {
    "disable": false
  }
}
